<input
  class={{_inputClassNames}}
  id={{fieldId}}
  type="text"
  value={{value}}
  placeholder={{placeholder}}
  onkeyup={{action (mut value) value='target.value'}}
  onchange={{action (mut value) value='target.value'}}
  data-test-selector={{testSelector}}>

<label for={{fieldId}} class={{_labelClassNames}}>
  {{label}}
</label>
