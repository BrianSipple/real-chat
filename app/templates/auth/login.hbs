{{#page-content class="g-bg-theme-primary-2--700 c-login-page"}}

  {{#form-card
    class="c-login-page__login-form
           u-relative
           u-transform-center
           g-bg-theme-nearWhite"
    title="Login to RealChat"
    onSubmit=(route-action 'loginUser' model)
    isSubmitEnabled=model.isFormValid
    buttonClassNames="u-ml-auto"
  }}

    {{material-validated-form-field
      class="u-mr2 u-ml2 u-mt4 u-mb4 c-login-page__form-field"
      materialInputClassNames="u-fill-width"
      model=model
      valuePath="email"
      label="Email"
      fieldType="email"
      placeholder="youremail@example.com"
    }}

    {{material-validated-form-field
      class="u-m2 c-login-page__form-field"
      materialInputClassNames="u-fill-width"
      model=model
      valuePath="password"
      label="Password"
      fieldType="password"
      placeholder="Password"
    }}

  {{/form-card}}

{{/page-content}}
